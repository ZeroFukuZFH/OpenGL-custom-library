{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",

                "-I", "${workspaceFolder}/dependencies/include",
                "-I", "${workspaceFolder}/dependencies/include/imgui",
                
                "${workspaceFolder}/dependencies/include/imgui/imgui.cpp",
                "${workspaceFolder}/dependencies/include/imgui/imgui_draw.cpp",
                "${workspaceFolder}/dependencies/include/imgui/imgui_tables.cpp",
                "${workspaceFolder}/dependencies/include/imgui/imgui_widgets.cpp",
                "${workspaceFolder}/dependencies/include/imgui/backends/imgui_impl_glfw.cpp",
                "${workspaceFolder}/dependencies/include/imgui/backends/imgui_impl_opengl3.cpp",
                "${workspaceFolder}/dependencies/include/imgui/imgui_demo.cpp", 
                "-I", "/opt/homebrew/include",
                "-I", "/opt/homebrew/opt/libtiff/include",
                "-I", "/opt/homebrew/opt/zstd/include",
                "-I", "/opt/homebrew/Cellar/xz/5.8.2/include",
                "-I", "/opt/homebrew/opt/jpeg-turbo/include",
                "-I", "/opt/homebrew/Cellar/libxext/1.3.6/include",
                "-I", "/opt/homebrew/Cellar/xorgproto/2025.1/include",
                "-I", "/opt/homebrew/Cellar/libxrender/0.9.12/include",
                "-I", "/opt/homebrew/Cellar/libx11/1.8.12/include",
                "-I", "/opt/homebrew/Cellar/libxcb/1.17.0/include",
                "-I", "/opt/homebrew/Cellar/libxau/1.0.12/include",
                "-I", "/opt/homebrew/Cellar/libxdmcp/1.1.5/include",
                "-I", "/Library/Developer/CommandLineTools/SDKs/MacOSX26.sdk/usr/include/ffi",
                "-I", "/opt/homebrew/opt/gettext/include",
                "-I", "/opt/homebrew/Cellar/pcre2/10.47/include",
                
                // Source files
                "${workspaceFolder}/app/glad.c",
                "${workspaceFolder}/app/GUI/gui.cpp",
                "${workspaceFolder}/app/properties.c",
                "${workspaceFolder}/app/object/light-obj/light.c",
                "${workspaceFolder}/app/object/texture-obj/texture.c",
                "${workspaceFolder}/app/graphics-math/glm.c",
                "${workspaceFolder}/app/list-to-array/LtoA.c",
                "${workspaceFolder}/app/object/camera-obj/camera.c",
                "${workspaceFolder}/app/object/includes/shaders.c",
                "${workspaceFolder}/app/object/includes/textures.c",
            
                "${workspaceFolder}/app/main.cpp",
                "${workspaceFolder}/app/color.c",

                // Output
                "-o", "${workspaceFolder}/app/main",

                // Linker flags
                "-L", "${workspaceFolder}/dependencies/library",
                "-L/opt/homebrew/lib",
                "-lglfw",
                "-lepoxy",
                
                // macOS frameworks
                "-framework", "OpenGL",
                "-framework", "Cocoa",
                "-framework", "IOKit",
                "-framework", "CoreVideo",
                "-framework", "CoreFoundation",

                "-Wno-deprecated"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/gcc"
        }
    ]
}
